<p>The total distance of this route is <%= @data[:distance] %></p>
<p>The total duration of this route is <%= @data[:duration] %></p>

<table>
  <tr>
    <th>Place</th>
    <th>Distance to</th>
  </tr>

  <% @data[:steps].each do |step| %>
    <tr>
      <td><%= step[:name] %></td>
      <td><%= step[:distance_to] %></td>
  <% end %>
</table>
